{
    "manifest_version": 3,
    "name": "금융 용어 알리미",
    "version": "1.0",
    "description": "금융 용어를 쉽게 설명하고 관련 뉴스를 제공합니다.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["https://localhost:5000/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }